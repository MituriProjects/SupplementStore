@model OpinionIndexVM

<environment exclude="Testing">

    @if (Model.IsProductToOpineWaiting) {

        <a asp-controller="Opinion" asp-action="Create" class="btn btn-outline-success m-3">@Localizer["OpineProductsButtonText"]</a>
    }

    @foreach (var opinion in Model.Opinions) {

        <div class="bg-light m-3 p-2" style="width:700px;">
            <div>@opinion.ProductName (@Localizer["BuyingDateLabel"]: @opinion.BuyingDate)</div>
            <div>@Localizer["RatingLabel"]: @opinion.Stars</div>

            @if (opinion.Text == null) {


                <div><i>(@Localizer["NoOpinionsHeader"])</i></div>
            }
            else {

                <div>@opinion.Text</div>
            }
        </div>
    }

</environment>

<environment include="Testing">

    <div name="IsProductToOpineWaiting">@Model.IsProductToOpineWaiting</div>

    @foreach (var opinion in Model.Opinions) {

        <div name="ProductName">@opinion.ProductName</div>
        <div name="BuyingDate">@opinion.BuyingDate</div>
        <div name="Stars">@opinion.Stars</div>
        <div name="Text">@opinion.Text</div>
    }

</environment>